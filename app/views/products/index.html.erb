<h1>All products</h1>
<% @product.each_slice(3) do |three_products| %>
   <div class="row">
    <% three_products.each do |product| %>
       <div class="col-md-4">
         <div class="well">
           <h2><a href="/products/<%= product.id %>"><%= product.title%></a></h2>
          <h3><%= product.name %></h3>
          <img src="<%= product.image %>" alt="">
           <h4><%= product.price %></h4>
           <h4><%= product.description %></h4>
        </div>
        </div>
         <% end %>
        </div>
      % end %>
